/*
    esp.json - ESP configuration file
 */
{
    name: 'esptest',
    description: 'ESP Unit Tests with Server',
    version: '0.1.0',

    esp: {
        app: true
    },
    http: {
        server: {
            listen: [
                'http://127.0.0.1:7300',
                'https://127.0.0.1:7543',
            ],
        },
        auth: {
            roles: {
                'executive':     ['manage', 'direct'],
                'user':          ['view'],
                'administrator': ['view', 'edit'],
            },
            users: {
                ralph: {
                    password: 'BF1:00128:bWFG5x85BYfuf7GW:w+zzIU0WTZQYaNAe0sPecWyry8Z9GrKH',
                    roles:    [ 'user', 'administrator', 'purchase' ],
                },
                mary: {
                    password: '5b90553bea8ba3686f4239d62801f0f3',
                    roles:    [ 'user', 'executive' ],
                },
                peter: {
                    password: '5b90553bea8ba3686f4239d62801f0f3',
                    roles:    [ 'user', 'executive' ],
                },
                joshua: {
                    password: '2fd6e47ff9bb70c0465fd2f5c8e5305e',
                    roles:    [ 'user', 'administrator', 'purchase' ],
                },
                julie: {
                    password: '9d8873a123eb506e7f8e84d1f2a26916',
                    roles:    [ 'user' ],
                },
            },
        },
        "log": {
            "location": "error.log",
            "level": 4
        },
        pipeline: {
            handlers: {
                espHandler:  [ '*.esp', '*.xesp' ],
                fileHandler: [ '*' ],
            },
        },
        ssl: {
            certificate: '${BIN_DIR}/test.crt',
            key: '${BIN_DIR}/test.key'
        },
        "trace": {
            "location": "trace.log",
            "level": 4
        },
        routes: [
            {
                pattern: '^/auth/basic',
                auth: {
                    realm: 'example.com',
                    type: 'basic',
                },
                routes: [
                    {
                        pattern: '^/auth/basic/executive',
                        auth: {
                            type: 'basic',
                            require: {
                                roles: [ 'executive' ],
                            },
                        },
                    }, {
                        pattern: '^/auth/basic/joshua',
                        auth: {
                            type: 'basic',
                            require: {
                                users: [ 'joshua' ],
                            },
                        },
                    },
                ],
            }, {
                pattern: '^/session/{action}$',
                methods: [ 'GET', 'POST' ],
                source: 'session.c',
                target: 'session/$1',
                pipeline: {
                    handlers: 'espHandler',
                },
            }, {
                pattern: '^/tmp/',
                methods: [ 'DELETE', 'PUT', 'OPTIONS' ],
            }, {
                pattern: '^/trace/',
                prefix: '/trace',
                methods: [ 'OPTIONS', 'TRACE' ],
            }, {
                pattern: '^/upload/',
                prefix: '/upload',
                pipeline: {
                    filters: [{
                        name: 'uploadFilter',
                        extensions: [ '*' ],
                    }],
                },
                directories: {
                    /* Relative to documents or absolute */
                    upload: 'tmp',
                },
            },
        ],
    },
}
