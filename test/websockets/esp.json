/*
    esp.json - ESP configuration file
 */
{
    name: 'esptest',
    description: 'ESP Unit Tests with Server',
    version: '0.1.0',
    esp: {
        app: true
    },
    http: {
        server: {
            listen: [
                'http://127.0.0.1:7300',
                'https://127.0.0.1:7543',
            ],
        },
        "log": {
            "location": "error.log",
            "level": 4
        },
        ssl: {
            key: '${BIN_DIR}/test.key',
            certificate: '${BIN_DIR}/test.crt',
        },
        "trace": {
            "location": "trace.log",
            "level": 4
        },
        routes: [
            {
                pattern: '^/websockets/{controller}/{action}$',
                prefix: '/websockets',
                source: 'websockets.c',
                target: '$1/$2',
                pipeline: {
                    filters: [ 'webSocketFilter' ],
                    handlers: 'espHandler',
                },
                timeouts: {
                    inactivity: '300secs',
                    request: 'never',
                },
                limits: {
                    webSockets: 20,
                    webSocketsMessage: '10MB',
                    webSocketsPacket: '8K',
                    webSocketsFrame: '4K',
                    rxBody: 'unlimited',
                }
            }
        ]
    }
}
