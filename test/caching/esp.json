/*
    esp.json - ESP configuration file
 */
{
    name: 'esptest',
    esp: {
        app: true,
    },
    http: {
        server: {
            listen: [
                'http://127.0.0.1:7300',
            ],
            "log": {
                "location": "error.log",
                "level": 4
            }
        },
        limits: {
            rxBody: 'unlimited',
            cacheItem: '100k',
        },
        "trace": {
            "location": "trace.log",
            "level": 4
        },
        routes: [ {
            pattern: '^/caching/{action}$',
            source: 'caching.c',
            target: 'caching/$1',
            pipeline: {
                handlers: 'espHandler',
            },
            cache: [ {
                client: '1hr',
                urls: '/caching/client',
            }, {
                server: '1day',
                urls: [ '/caching/small', '/caching/big', '/caching/huge' ],
            }, {
                server: '1day',
                manual: true,
                urls: '/caching/manual',
            } ],
        }, {
            pattern: '^/combined',
            prefix: '/combined',
            cache: [ {
                server: '1day',
                urls: [ '/caching.esp' ],
            } ],
        }, {
            pattern: '^/only',
            prefix: '/only',
            cache: [ {
                server: '1day',
                urls: [ '/caching.esp?esp=1&prefix=/only' ],
            } ],
        }, {
            pattern: '^/unique',
            prefix: '/unique',
            cache: [ {
                server: '1day',
                unique: true,
                urls: [ '/caching.esp' ],
            } ],
        }, {
            pattern: '^/ext',
            prefix: '/ext',
            cache: [ {
                server: '1day',
                extensions: [ 'esp' ],
            } ],
        }, {
            pattern: '^/types',
            prefix: '/types',
            cache: [ {
                server: '1day',
                extensions: [ 'application/x-MOB' ],
            } ],
        }, {
            pattern: '^/methods',
            prefix: '/methods',
            cache: [ {
                server: '1day',
                methods: [ 'POST' ],
            } ]
        } ]
    }
}
