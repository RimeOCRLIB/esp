{
    "name": "login-form",
    "description": "login-form",
    "version": "1.0.0",
    "esp": {
        "app": true,
    },
    "http": {
        "auth": {
            "login": "https:///public/login.esp",
            "realm": "example.com",
            "roles": {
                "user": [
                    "view"
                ],
                "administrator": [
                    "view",
                    "edit"
                ]
            },
            "store": "config",
            "type": "form",
            "users": {
                "joshua": {
                    "password": "BF1:00128:5RdIPYT33dz2Mq7D:0YQi7BNN2ZdEHQPYS4ZPtQIfnIZxEQ00",
                    "roles": [ "user", "administrator" ]
                },
                "mary": {
                    "password": "BF1:00128:oju2hEWmhzLV9Di5:y9khsIrgr2kLfhNMUB//pN0UYcC4nzIX",
                    "roles": [ "user" ]
                }
            }
        },
        "server": {
            "listen": [
                "http://127.0.0.1:4000",
                "https://127.0.0.1:4443"
            ],
        },
        "ssl": {
            "certificate": "../../src/certs/samples/self.crt",
            "key": "../../src/certs/samples/self.key"
        },
        "routes": [
            {
                "pattern": "/user/{action}",
                "redirect": "secure",
                "source": "user.c",
                "target": "user/${action}",
                "auth": "none",
            },
            {
                "pattern": "/public",
                "prefix": "/public",
                "documents": "documents/public",
                "auth": "none",
            },
            {
                "pattern": "/admin",
                "auth": {
                    "require": {
                        "roles": [ "administrator" ]
                    }
                }
            },
        ],
        "timeouts": {
            "session": "1min"
        }
    }
}
