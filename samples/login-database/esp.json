{
    "name": "login-custom",
    "description": "login-custom",
    "version": "1.0.0",
    "esp": {
        "app": true,
    },
    "http": {
        "auth": {
            "store": "app",
            "type": "form",
            "login": "https:///public/login.esp"
        },
        "database": "mdb://login.mdb",
        "server": {
            "listen": [
                "http://127.0.0.1:4000",
                "https://127.0.0.1:4443"
            ],
        },
        "ssl": {
            "certificate": "../../src/certs/samples/self.crt",
            "key": "../../src/certs/samples/self.key"
        },
        "routes": [
            {
                "pattern": "/user/{action}",
                "redirect": "secure",
                "source": "user.c",
                "target": "user/${action}",
                "auth": "none"
            }, {
                "pattern": "/public",
                "auth": "none",
            }
        ],
        "timeouts": {
            "session": "1min"
        }
    }
}
